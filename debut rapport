$conn = new PDO('mysql:host=127.0.0.1;dbname=ateli2525216;charset=utf8','ateli2525216','ebpaol3qzv');

// R√©cup√©rer les 10 meilleurs utilisateurs class√©s par nombre de quiz termin√©s
$stmt = $conn->prepare("SELECT pseudo, ttl_quizz, 
                               COALESCE(images.image, 'avatar.jpg') AS image 
                        FROM users 
                        LEFT JOIN images ON users.id = images.id 
                        ORDER BY ttl_quizz DESC 
                        LIMIT 10");
$stmt->execute();
$users = $stmt->fetchAll(PDO::FETCH_ASSOC);
